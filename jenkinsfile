pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'omotinuade/periodapp'
        BUILD_NUMBER = "latest"
    }
    
    stages {
        stage('Clone') {
            steps {
                git branch: 'main',
                url: 'https://github.com/Omotinuade/period-app-api.git'

            }
        }

        stage('Docker Build') {
            steps {
                sh 'ls -la'
                sh 'docker build -t omotinuade/periodapp: .'
            }
        }

    }
}
